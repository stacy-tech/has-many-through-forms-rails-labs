<%= form_for(@post) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  
    <%= f.label :content %>
    <%= f.text_field :content %><br>
  
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <%= f.fields_for :categories, @post.categories.build do |category_fields| %>
      <%= category_fields.label :name %>
      <%= category_fields.text_field :name %>
      
    <% end %>

    <%= f.submit %>
<% end %>